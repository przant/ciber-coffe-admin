<div class="row mt-5 px-5">
  <h2 class="text-secondary fs-1 fw-bold mb-5 mt-3">Edit <%= resource_name.to_s.humanize %></h2>
  <div class="col-4">
    <div class="row mb-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-2">
          <%= f.label :name, class: 'form-label fs-4 fw-bold' %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-2">
          <%= f.label :last_name, class: 'form-label fs-4 fw-bold' %><br />
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>

        <div class="mb-2">
          <%= f.label :nickname, class: 'form-label fs-4 fw-bold' %><br />
          <%= f.text_field :nickname, class: 'form-control' %>
        </div>

        <div class="mb-2">
          <%= f.label :email, class: 'form-label fs-4 fw-bold' %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-2">
          <%= f.label :password, class: 'fs-4 form-label fw-bold' %> <i>(leave blank if you don't want to change)</i>
          <%= f.password_field :password, placeholder: 'New Password', class: 'form-control' %>
          <div class="form-text">
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> characters minimum)
            <% end %>
          </div>
        </div>

        <div class="mb-2">
          <%= f.label :password_confirmation, class: 'fs-4 form-label fw-bold' %><br />
          <%= f.password_field :password_confirmation, placeholder:'New Password Confirmation',class: 'form-control' %>
        </div>

        <div class="mb-5">
          <%= f.label :current_password, class: 'fs-4 form-label fw-bold' %><br />
          <i>(we need your current password to confirm your changes)</i>
          <%= f.password_field :current_password, placeholder:'Current Password',class: 'form-control' %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Update", class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
    <div class="row text-center mb-5">
      <h4 class="fw-bold">Cancel my account</h4>

      <p class="fw-bold">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', method: :delete, data: { turbo: false, confirm: "Are you sure?" } %></p>

      <%= link_to "Back", :back, class: 'text-primary fw-bold' %>
    </div>
  </div>
</div>
